<div class="col-md-12">
  <h1>Employee: <%= @employee.full_name %></h1>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Job Title</th>
        <th>Salary</th>
        <th>Phone Number</th>
        <th>Gender</th>  
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @employee.first_name %></td>
        <td><%= @employee.last_name %></td>
        <td><%= @employee.email %></td>
        <td><%= @employee.job_title %></td>
        <td><%= @employee.salary_currency %></td>
        <td><%= @employee.japan_phone %></td>
        <td><%= @employee.gender %></td>  
      </tr>
    <tbody>
  </table>
</div>  

<%= link_to "Edit", "/employees/#{@employee.id}/edit", class: "btn btn-default" %>
<%= link_to "Delete", "/employees/#{@employee.id}", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}  %>
